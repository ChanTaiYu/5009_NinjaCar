<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_pending_ride_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pending_ride_title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pending_ride_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pending_ride_date"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btn_accept_ride"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accept_button_lbl"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
